<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/spacing_regular"
    android:background="@drawable/bg_rv_admin">

    <ImageView
        android:id="@+id/iv_produk"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:contentDescription="@string/cd_image"
        android:padding="@dimen/spacing_normal_quarter"
        android:src="@drawable/img_produk"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name_produk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/monsemibold"
        android:text="Aice Choco Melt"
        android:layout_marginTop="@dimen/spacing_regular"
        android:layout_marginStart="@dimen/spacing_normal_quarter"
        android:textColor="@color/color_black1"
        android:textSize="@dimen/font_large"
        app:layout_constraintStart_toEndOf="@+id/iv_produk"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/monmed"
        android:text="Rp. 4,000,-"
        android:layout_marginTop="@dimen/spacing_normal_quarter"
        android:textColor="@color/color_black1"
        android:textSize="@dimen/font_small"
        app:layout_constraintStart_toStartOf="@+id/tv_name_produk"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_produk" />


</androidx.constraintlayout.widget.ConstraintLayout>